                <input id="inputIdTipoSolicitud" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Nombre" class="control-label"></label>
                <input id="inputNombreTipoSolicitud" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Estado" class="control-label"></label>
                <select id="comboEstadoTipoSolicitud" asp-for="Estado">
                    <option value="0">Deshabilitado</option>
                    <option value="1">Habilitado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Descripcion" class="control-label"></label>
                <input id="inputDescripcionTipoSolicitud" asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <button id="btnSave" type="submit" name="Submit" value="Login" class="btn btnPrimaryColor float-right col-1">Guardar</button>
                    <button id="btnCancel" type="button" name="Submit" value="Login" class="btn btnCancel btnPrimaryColor float-left col-1">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="invisible">
    <form action="@Url.Action("DeleteTipoServicio","Administrador")" method="post">
        <div class="form-group">
            <input type="text" id="IdTipoServiciod" class="form-control" name="Id" placeholder="Ingrese Id">
        </div>
        <button type="submit" name="btnCrearTipoServicio" value="Login" class="btn btn-black">Crear</button>

    </form>
</div>


@section Scripts{
    <script src="~/js/Administrador/TablaAdmin.js"></script>
}
    
    


