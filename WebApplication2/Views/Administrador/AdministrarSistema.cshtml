@using AppWeb.Models.ViewModels.Administrador
@model TiposViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "~/Views/Administrador/_LayoutAdministrador.cshtml";
}

@section Head{
    <link href="~/css/Administrador/tablaadmin.css" rel="stylesheet" />
}



<h1 class="titulo text-center">Sistema</h1>
<div id="divTablasTipo" class="center ">     
    <div class="divComboTipo">
        <select id="comboTipo" name="filtro" class="form-select">
            <option value="Tipo Servicio">Tipo Servicio</option>
            <option value="Tipo Solicitud">Tipo Solicitud</option>
        </select>
            <input id="inpuTest2" class="form-control" />
    </div>
    <div id="divTablaServicios">
        <table id="tablaServicios" class="table table-sm ">
        <thead>
            <tr class="filtros">
                <th>Id </th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>Estado</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoServicio in (ViewBag.TipoServicio as List<TiposViewModel>))
            {
            <tr class="table-row ">
                <td>
                    @Html.DisplayFor(m => tipoServicio.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => tipoServicio.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(m => tipoServicio.Valor)
                </td>
                <td >
                    @Html.DisplayFor(m => tipoServicio.EstadoStr)
                </td>
                <td>
                    @Html.DisplayFor(m => tipoServicio.Descripcion)
                </td>
            </tr>
            }
        </tbody>
        </table>
        <div class="col-12 ">
            <button type="submit" id="btnCreateTipoServicio" class="btn btnPrimaryColor float-right col-1 btnTabla">Crear</button>
            <button type="submit" id="btnUpdateTipoServicio" class="btn btnPrimaryColor float-right col-1 btnTabla invisible">Modificar</button>

        </div>
    </div>
    <div id="divTablaSolicitudes">
    <table id="tablaSolicitudes" class="table table-sm">
        <thead>
            <tr class="filtros">
                <th>Id </th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoSolicitud in (ViewBag.TipoSolicitud as List<TiposViewModel>))
            {
            <tr class="table-row ">
                <td>
                        @Html.DisplayFor(m => tipoSolicitud.Id)
                </td>
                <td>
                        @Html.DisplayFor(m => tipoSolicitud.Nombre)
                </td>
                <td>
                        @Html.DisplayFor(m => tipoSolicitud.EstadoStr)
                </td>
                <td>
                        @Html.DisplayFor(m => tipoSolicitud.Descripcion)
                </td>
            </tr>
            }
        </tbody>
    </table>
        <div class="col-12 ">
            <button type="submit" id="btnCreateTipoSolicitud" class="btn btnPrimaryColor float-right col-1 btnTabla">Crear</button>
            <button type="submit" id="btnUpdateTipoSolicitud" class="btn btnPrimaryColor float-right col-1 btnTabla invisible">Modificar</button>

        </div>
    </div>
</div>
<div id="divTipoServicio" class=" container formulario rounded">
    <div id="createTipoServicio" class="invisible ">
        <form action="@Url.Action("CreateTipoServicio","Administrador")" method="post" class="borders">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <button id="btnCreate" type="submit" name="Submit" value="Login" class="btn btnPrimaryColor float-right col-1">Crear</button>
                    <button id="btnCancel" type="button" name="Submit" value="Login" class="btn btnCancel btnPrimaryColor float-left col-1">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
    <div id="updateTipoServicio" class="invisible">
        <form action="@Url.Action("UpdateTipoServicio","Administrador")" method="post" class="borders">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row " style="display:none">
                <label asp-for="Id" class="control-label"></label>
                <input id="inputIdTipoServicio" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Nombre" class="control-label"></label>
                <input id="inputNombreTipoServicio" asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Valor" class="control-label"></label>
                <input id="inputValorTipoServicio" asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Estado" class="control-label"></label>
                <select id="comboEstadoTipoServicio" asp-for="Estado">
                    <option value="0">Deshabilitado</option>
                    <option value="1">Habilitado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Descripcion" class="control-label"></label>
                <input id="inputDescripcionTipoServicio" asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <button id="btnSave" type="submit" name="Submit" value="Login" class="btn btnPrimaryColor float-right col-1">Guardar</button>
                    <button id="btnCancel" type="button" name="Submit" value="Login" class="btn btnCancel btnPrimaryColor float-left col-1">Cancelar</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div id="divTipoSolicitud" class="container formulario rounded">
    <div id="createTipoSolicitud" class="invisible ">
        <form action="@Url.Action("CreateTipoSolicitud","Administrador")" method="post" class="borders">
