@using AppWeb.Models.ViewModels.Profesional
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model AccidenteFinishViewModel

@{
    Layout = "~/Views/Profesional/_LayoutProfesional.cshtml";
}

@section Head{
}

    <div id="finishSolicitud" class="col-sm-12">
        <h1 class="titulo text-center">Responder Accidente</h1>
        <div class="bg-secondary rounded h-100 p-4 col-xl-10" style="margin:auto;">
            <form action="@Url.Action("FinishAccidente","Profesional")" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <label asp-for="Comentario" class="col-sm-2 col-form-label">Conclusion</label>
                    <div class="col-sm-10 col-xl-12 ">
                        <textarea asp-for="Comentario" class="form-control" id="inputComentarioFinish" style="height: 200px;"></textarea>
                        <span asp-validation-for="Comentario" class="text-danger"></span>
                    </div>
                </div>
                <input asp-for="Id" value="@ViewBag.Accidente.Id" class="form-control" hidden />
                <input asp-for="EmpleadoId" value="@Accessor.HttpContext.Session.GetString("Id")" class="form-control" hidden />
            <div class="row ">
                <div class="col-12">
                    <button id="btnCreate" type="submit" name="Submit" class="btn btn-primary btnCreate float-right ">Finalizar</button>
                    <a id="btnCancel" class="btn btn-primary btnRead float-left" onclick="history.back()" role="button">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/Profesional/ProfesionalAccidenteFinish.js"></script>
    }