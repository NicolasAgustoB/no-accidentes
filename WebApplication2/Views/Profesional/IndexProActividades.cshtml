@using AppWeb.Models.ViewModels.Profesional
@model IndexServicioViewModel
@{
    Layout = "~/Views/Profesional/_LayoutProfesional.cshtml";
}

@section Head{
}
    <h1 class="titulo text-center">Actividades</h1>
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div id="divTablaServicios">
                <table id="tablaServicios" class="table table-responsive-sm">
                    <thead>
                        <tr class="filtros bg-negro">
                            <th>Id </th>
                            <th>Actividad</th>
                            <th>Cliente</th>
                            <th>Empresa</th>
                            <th>Sucursal</th>
                            <th>Fecha</th>
                            <th>Hora Inicio</th>
                            <th>Hora Termino</th>
                            <th>Estado</th>
                            <th>Adicional</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var servicio in (ViewBag.Servicio as List<IndexServicioViewModel>))
                    {
                        <tr class="table-row bg-letras">
                            <td>
                                @Html.DisplayFor(m => servicio.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.TipoServicio)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.Empresa)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.Sucursal)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.HoraInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.HoraTermino)
                            </td>
                            <td>
                                @Html.DisplayFor(m => servicio.Estado)
                            </td>
                            <td class="text-center">
                                @{
                                if(servicio.Adicional == true){
                                <input class="form-check-input checkInput" type="radio" checked>
                                }
                                else{
                                <input class="form-check-input checkInput" type="radio">
                                }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-12">
                    <form action="@Url.Action("ProfesionalServicioRead","Profesional")">
                        <button type="submit" id="btnReadServicio" class="btn btn-primary btnRead float-left invisible">Detalles</button>
                        <input name="Id" id="inputReadServicio" class="form-control" hidden />
                    </form>
                    <form action="@Url.Action("IndexProMejora","Profesional")">
                        <button type="submit" id="btnUpgradeServicio" class="btn btn-primary btnCreate float-left invisible">Actividades de mejora</button>
                        <input name="Id" id="inputUpgradeServicio" class="form-control" hidden />
                    </form>
                    <form action="@Url.Action("ProfesionalServicioCreate","Profesional")">
                        <button type="submit" id="btnCreateServicio" class="btn btn-primary btnCreate float-right">Crear</button>
                        <input name="Id" id="inputCreateServicio" class="form-control" hidden />
                    </form>
                    <form action="@Url.Action("ProfesionalServicioFinish","Profesional")">
                        <button type="submit" id="btnFinishServicio" class="btn btn-primary btnUpdate float-right invisible">Realizar</button>
                        <input name="Id" id="inputFinishServicio" class="form-control" hidden />
                    </form>

                </div>
            </div>
        </div>
    </div>
    @if(ViewBag.Alerta != null){

        <script type="text/javascript">
            alert("@ViewBag.Alerta");
        </script>

    }
</div>



@section Scripts{
    <script src="~/js/Profesional/IndexProServicio.js"></script>
}
