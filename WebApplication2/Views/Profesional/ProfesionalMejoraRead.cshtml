@using AppWeb.Models.ViewModels.Profesional
@model IndexProMejoraViewModel
@{
    Layout = "~/Views/Profesional/_LayoutProfesional.cshtml";
}

@section Head{
}
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <form action="@Url.Action("ReadMejora","Profesional")" method="post" class="borders">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3 ">
                    <div class=" col-12 ">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" value="@ViewBag.Mejoras.Nombre" class="form-control" disabled/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <div class=" col-12 ">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" value="@ViewBag.Mejoras.Descripcion" class="form-control" disabled />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
               <div class="row mb-3 ">
                    <div class=" col-12 ">
                            <label asp-for="Comentario" class="control-label"></label>
                            <textarea class="form-control" value="@ViewBag.Mejoras.Comentario" style="height: 70px;" disabled>@ViewBag.Mejoras.Comentario</textarea>
                            <span asp-validation-for="Comentario" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <div class=" col-12 ">
                        <label asp-for="Situacion" class="control-label"></label>
                        <select id="comboEstadoMejora" class="form-select" asp-for="Situacion" disabled>
                            <option value="">Seleccione...</option>
                            <option value="0">Pendiente</option>
                            <option value="1">Realizada</option>
                            <option value="2">Fallida</option>
                        </select>
                        <span asp-validation-for="Situacion" class="text-danger"></span>
                    </div>
                </div>
            </form>
    </div>
 </div>
            <input  id="situacion" value="@ViewBag.Mejoras.Situacion" class="form-control" hidden/>
            <div class="row ">
                <div class="col-12">
                    <a id="btnCancel" class="btn btn-primary btnRead float-left" onclick="history.back()" role="button">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
    <script src="~/js/Profesional/ProfesionalMejoraRead.js"></script>
}
