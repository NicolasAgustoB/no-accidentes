@using AppWeb.Models.ViewModels.Profesional
@model IndexAccidenteViewModel;
@{
    Layout = "~/Views/Profesional/_LayoutProfesional.cshtml";
}

@section Head{
}
    <h1 class="titulo text-center">Accidentes</h1>

    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div id="divTablaAccidentes">
                <table id="tablaAccidentes" class="table table-responsive-sm">
                    <thead>
                        <tr class="filtros">
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Empresa</th>
                            <th>Sucursal</th>
                            <th>Cliente</th>
                            <th>Accidentados</th>
                            <th>Fecha</th>
                            <th>Telefono</th>
                            <th>Profesional</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var accidente in (ViewBag.Accidentes as List<IndexAccidenteViewModel>))
                    {
                        <tr class="table-row ">
                            <td>
                                @Html.DisplayFor(m => accidente.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Empresa)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Sucursal)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Accidentados)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Profesional)
                            </td>
                            <td>
                                @Html.DisplayFor(m => accidente.Estado)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row ">
                <div class="col-12">
                    <form action="@Url.Action("ProfesionalAccidenteFinish","Profesional")">
                        <button type="submit" id="btnFinishAccidente" class="btn btn-primary btnCreate float-right invisible">Responder</button>
                        <input name="Id" id="inputFinishAccidente" class="form-control " hidden />
                    </form>
                    <form action="@Url.Action("ProfesionalAccidenteRead","Profesional")">
                        <button type="submit" id="btnReadAccidente" class="btn btn-primary btnRead float-left invisible">Detalles</button>
                        <input name="Id" id="inputReadAccidente" class="form-control" hidden />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Profesional/IndexProAccidente.js"></script>
}