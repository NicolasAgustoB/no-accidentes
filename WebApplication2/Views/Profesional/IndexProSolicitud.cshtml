@using AppWeb.Models.ViewModels.Profesional
@model IndexSolicitudViewModel;
@{
    Layout = "~/Views/Profesional/_LayoutProfesional.cshtml";
}

@section Head{
}
    <h1 class="titulo text-center">Solicitudes</h1>

    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div id="divTablaSolicitudes">
                <table id="tablaSolicitudes" class="table table-responsive-sm">
                    <thead>
                        <tr class="filtros bg-negro">
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Profesional</th>
                            <th>Cliente</th>
                            <th>Fecha creacion</th>
                            <th>Fecha de cierre</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var solicitud in (ViewBag.Solicitudes as List<IndexSolicitudViewModel>))
                    {
                        <tr class="table-row bg-letras">
                            <td>
                                @Html.DisplayFor(m => solicitud.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.TipoSolicitud)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.Empleado)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.FechaInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.FechaTermino)
                            </td>
                            <td>
                                @Html.DisplayFor(m => solicitud.Situacion)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row ">
                <div class="col-12">
                    <form action="@Url.Action("ProfesionalSolicitudFinish","Profesional")">
                        <button type="submit" id="btnFinishSolicitud" class="btn btn-primary btnCreate float-right">Finalizar</button>
                        <input name="SucursalId" id="inputFinishSolicitud" class="form-control " hidden />
                    </form>
                    <form action="@Url.Action("ProfesionalSolicitudResponse","Profesional")">
                        <button type="submit" id="btnResponseSolicitud" class="btn btn-primary btnUpdate float-xl-right float-sm-left invisible">Responder</button>
                        <input name="Id" id="inputResponseSolicitud" class="form-control " hidden />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/Profesional/IndexProCliente.js"></script>
}